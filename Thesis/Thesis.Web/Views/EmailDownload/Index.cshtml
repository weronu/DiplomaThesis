@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Thesis.Web.Models.EmailDownloadViewModel

<div class="container-download">
    @using (@Html.BeginForm("SubmitDownload", "EmailDownload", FormMethod.Post, new {@class = "download-form" }))
    {
        <form class="download-form">
            <label class="server-conf-label"> EMAIL SERVER CONFIGURATION</label>
            <div class="form-group">
                <div class="form-group">
                </div>
                @Html.LabelFor(model => model.Email, new {@for = "InputEmail" })
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control",@id = "InputEmail", @placeholder="Enter email", @inputmode = "email"})
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Username, new { @for = "InputUsername" })
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @id = "InputUsername", @placeholder = "Enter username" })
                @Html.ValidationMessageFor(model => model.Username)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password, new { @for = "InputPassword" })
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @id = "InputPassword", @placeholder = "Enter password", @inputmode = "password" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div class="form-row">
                <div class="form-group col-md-10">
                    @Html.LabelFor(model => model.ServerAddress, new {@for = "InputServerAddress" })
                    @Html.TextBoxFor(model => model.ServerAddress, new { @class = "form-control",@id = "InputServerAddress", @placeholder="Enter server address", @inputmode = "text"})
                    @Html.ValidationMessageFor(model => model.ServerAddress)
                </div>
                <div class="form-group col-md-2">
                    @Html.LabelFor(model => model.Port, new {@for = "InputPort" })
                    @Html.TextBoxFor(model => model.Port, new { @class = "form-control",@id = "InputPort", @placeholder="143", @inputmode = "text"})
                    @Html.ValidationMessageFor(model => model.Port)
                </div>
            </div>
            <div class="form-check">
                @Html.CheckBoxFor(model => model.UseSSL, new { @class = "form-check-input", @id = "InputUseSSL"})
                @Html.LabelFor(model => model.UseSSL, new {@for = "InputUseSSL"})
            </div>
            <button id="submitButton" type="submit" class="btn btn-light">Submit</button>
        </form>
    }
</div>

<script>
    $( "#submitButton" ).click(function() {
        blockUI();
    });
    window.onload = function() {
        unblockUI();
    };
</script>
